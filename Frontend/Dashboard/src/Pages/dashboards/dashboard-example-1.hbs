{{#> base }}
    {{> AppSidebar/sidebar dashboards-eg-1=this }}
    <div class="app-main__outer" id="dashboard">
        <div class="app-main__inner">
            {{> AppMain/page-title }}
            <div class="row">
                <div class="col-md-6 col-xl-6">
                    <div class="card mb-3 widget-content bg-midnight-bloom">
                        <div class="widget-content-wrapper text-white">
                            <div class="widget-content-left">
                                <div class="widget-heading">Users</div>
                                <div class="widget-subheading">Registered platform Users</div>
                            </div>
                            <div class="widget-content-right">
                                <div class="widget-numbers text-white"><span><%analytics.users%></span></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-6">
                    <div class="card mb-3 widget-content bg-arielle-smile">
                        <div class="widget-content-wrapper text-white">
                            <div class="widget-content-left">
                                <div class="widget-heading">Administrators</div>
                                <div class="widget-subheading">Users controlling Platform Content</div>
                            </div>
                            <div class="widget-content-right">
                                <div class="widget-numbers text-white"><span><%analytics.admin%></span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-xl-4">
                    <div class="card mb-3 widget-content">
                        <div class="widget-content-outer">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-left">
                                    <div class="widget-heading">Total Products On Sale</div>
                                    <div class="widget-subheading">Items which users have put up for sale</div>
                                </div>
                                <div class="widget-content-right">
                                    <div class="widget-numbers text-success"><%analytics.commerce%></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-4">
                    <div class="card mb-3 widget-content">
                        <div class="widget-content-outer">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-left">
                                    <div class="widget-heading">Books in Library</div>
                                    <div class="widget-subheading">Total Books on Platform library</div>
                                </div>
                                <div class="widget-content-right">
                                    <div class="widget-numbers text-warning"><%analytics.books%></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-4">
                    <div class="card mb-3 widget-content">
                        <div class="widget-content-outer">
                            <div class="widget-content-wrapper">
                                <div class="widget-content-left">
                                    <div class="widget-heading">Announcements</div>
                                    <div class="widget-subheading">Total announcements on noticeboard</div>
                                </div>
                                <div class="widget-content-right">
                                    <div class="widget-numbers text-danger"><%analytics.announcement%></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="main-card mb-3 card">
                        <div class="card-header">Most Visited Pages
                            <div class="btn-actions-pane-right">
                                <div role="group" class="btn-group-sm btn-group">
                                    <button class="active btn btn-focus">Last Week</button>
                                    <button class="btn btn-focus">All Month</button>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                                <thead>
                                <tr>
                                    <th class="text-center">Rank</th>
                                    <th>Page Name</th>
                                    <th class="text-center">Total Visits</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td class="text-center text-muted">1</td>
                                    <td>
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper">
                                                <div class="widget-content-left flex2">
                                                    <div class="widget-heading">Courses</div>
                                                    <div class="widget-subheading opacity-7">Education</div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">100</td>
                                    <td class="text-center">
                                        <button type="button" id="PopoverCustomT-1" class="btn btn-primary btn-sm">Visit</button>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{> AppFooter/footer }}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
    // var info;
    new Vue ({
        el: '#dashboard',
        delimiters: ['<%', '%>'],
        data (){
            return {
                analytics: [],

            }
        },

        mounted(){
            let vm = this;
            axios.get('http://localhost:8000/community/manage/users')
                .then(res=>{
                    vm.analytics = res.data;
                    console.log(vm.analytics);
                });
        }, 
    });
    </script>
{{/ base }}