    new Vue({
        el: '#announcement',
        delimiters: ['<%', '%>'],
        data() {
            return {
                loading: true,
                information: [],
            }
        },

        mounted() {
            let vm = this;
            axios.get('http://localhost:8000/community/library/epreuves')
                .then(res => {
                    vm.information = res.data;
                    this.loading = false;
                });
        },
    });
