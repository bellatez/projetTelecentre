{{#> AppMain/view_dialog}}
	<div id="view">
		<div v-if="info_data">
			<div class="card mb-3">
				<div class="card-body">
					<div v-if="info_data.media">
						
					</div>
					<div v-else>
						<img src="../../assets/images/information.jpg" alt="">
					</div>
				</div>
			</div>
			<div class="table-responsive">
				<table class="align-middle mb-0 table table-borderless table-striped table-hover">
					<tbody>
						<tr>
							<td class="font-weight-bold text-capitalize">Title</td>
							<td><% info_data.title %></td>
						</tr>
						<tr>
							<td class="font-weight-bold text-capitalize">Category</td>
							<td><% info_data.category.name %></td>
						</tr>
						<tr>
							<td class="font-weight-bold text-capitalize">Information Content</td>
							<td><% info_data.content %></td>
						</tr>
						<tr>
							<td class="font-weight-bold text-capitalize">Posted By</td>
							<td><% info_data.user.full_name %></td>
						</tr>
						<tr>
							<td class="font-weight-bold text-capitalize">From</td>
							<td><% info_data.user.location.district %></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>

{{/ AppMain/view_dialog }}

<script>
// var info;
new Vue ({
    el: '#view',
    delimiters: ['<%', '%>'],
    data (){
        return {
            info_data: [],
            info_id: 1,
            save: true,
            close: false,
        }
    },

    mounted(){
        let vm = this;

        axios.get('http://localhost:8000/community/manage/information/view/'+this.info_id)
            .then(res=>{
                vm.info_data = res.data;
            })
    },

    methods: {

    }


});
</script>